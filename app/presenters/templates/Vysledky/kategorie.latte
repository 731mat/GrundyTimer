{block content}
    <table id="souetziciTable" class="display nowrap" width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>number</th>
            <th>jmeno</th>
            <th>prijmeni</th>
            <th>rocnik</th>
            <th>kategorie</th>
            <th>time</th>
            {for $i = 0; $i < $maxCulom; $i++ }
                <th>kolo{$i}</th>
            {/for}
        </tr>
        </thead>
        <tbody>
        <tr n:foreach="$data as $soutezici">
            <td>{$soutezici['start_number']}</td>
            <td>{$soutezici['first_name']}</td>
            <td>{$soutezici['last_name']}</td>
            <td>{$soutezici['birth_year']}</td>
            <td>{$soutezici['categoryName']}</td>
            <td>{$soutezici['rozdil']|date:'%H:%i:%s'}</td>
            <td n:foreach="$soutezici['casy'] as $cas">
                {$cas|date:'%H:%i:%s'}
            </td>
        </tr>
        </tbody>
    </table>

{/block}

{block scripts}
    {include parent}
    <script>
        $(document).ready(function(){
            $('#souetziciTable').dataTable( {
                "lengthChange": false,
                dom: 'Bfrtip',
                buttons: [
                    {
                        extend: 'pdf',
                        text: 'Uložit PDF',
                        orientation: 'landscape',
                        filename:{$dataInfo->name|webalize."-".$dataKategorie->name},
                        title:{$dataInfo->name." - ".$dataKategorie->name},
                        message:{$dataInfo->adress}+" "+{$dataInfo->date|date:'%d.%m.%Y'}+"      -   ©GrundyTimer  časomíra ",
                        exportOptions: {
                            modifier: {
                                page: 'current'
                            }
                        }
                    },
                    {
                        extend: 'print',
                        text: 'vytiskni',
                        title:{$dataInfo->name." - ".$dataKategorie->name},
                        message:{$dataInfo->adress}+" "+{$dataInfo->date|date:'%d.%m.%Y'}+"      -   ©GrundyTimer  časomíra ",
                        exportOptions: {
                            stripHtml: false,
                            modifier: {
                                page: 'current'
                            }
                        }
                    }
                ]
            });
        });
    </script>
{/block}


{block head}
{/block}
